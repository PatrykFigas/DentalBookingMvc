@model List<DentalBookingMvc.Models.Dentist>
@using DentalBookingMvc.Models

@{
    ViewData["Title"] = "Wybierz dentystę";
    var service = ViewBag.Service as Service;
}

<div class="page-header">
    <div>
        <h2 class="mb-1">Wybierz dentystę</h2>
        <div class="page-subtitle">Następnie wybierzesz dostępny termin.</div>
    </div>
    <a asp-controller="Services" asp-action="Index" class="btn btn-outline-primary">← Wróć do usług</a>
</div>

@if (service != null)
{
    <div class="card mb-3 section-card">
        <div class="card-body">
            <div class="d-flex justify-content-between flex-wrap gap-3">
                <div>
                    <div class="text-muted mb-1">Usługa</div>
                    <div class="h5 mb-0">@service.Name</div>
                    <div class="text-muted">@service.Description</div>
                </div>
                <div class="text-end">
                    <div class="text-muted mb-1">Cena</div>
                    <div class="h5 mb-0">@service.Price.ToString("0.00") zł</div>
                    <div class="text-muted">Czas: @service.DefaultDurationMinutes min</div>
                </div>
            </div>
        </div>
    </div>
}

@if (!Model.Any())
{
    <div class="alert alert-warning">Brak dostępnych dentystów.</div>
}
else
{
    <div class="card section-card">
        <div class="card-body">
            <form asp-action="Create" method="get">
                <input type="hidden" name="serviceId" value="@service?.Id" />

                <div class="mb-3">
                    <label class="form-label">Dentysta</label>
                    <select name="dentistId" class="form-select" required>
                        <option value="">-- wybierz dentystę --</option>
                        @foreach (var d in Model)
                        {
                            <option value="@d.Id">@d.FullName (@d.Specialty)</option>
                        }
                    </select>
                    <div class="form-text">Pokazujemy tylko aktywnych dentystów.</div>
                </div>

                <div class="d-flex gap-2 flex-wrap">
                    <button type="submit" class="btn btn-primary">Dalej</button>
                    <a asp-controller="Services" asp-action="Index" class="btn btn-secondary">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
}
