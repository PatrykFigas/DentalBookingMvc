@model List<DentalBookingMvc.Models.Service>

@{
    ViewData["Title"] = "Usługi";
}

<div class="page-header">
    <div>
        <h2 class="mb-1">Usługi stomatologiczne</h2>
        <div class="page-subtitle">Wybierz usługę i przejdź do rezerwacji terminu.</div>
    </div>
</div>

<div class="row">
    @foreach (var s in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start gap-2">
                        <h5 class="card-title mb-1">@s.Name</h5>
                        <span class="badge bg-success">@s.Price.ToString("0.00") zł</span>
                    </div>

                    <p class="card-text mt-2">@s.Description</p>

                    <div class="text-muted mt-auto">
                        <small>Czas: @s.DefaultDurationMinutes min</small>
                    </div>

                    <div class="mt-3 d-flex gap-2">
                        <a class="btn btn-primary w-100"
                           asp-controller="Reservations"
                           asp-action="ChooseDentist"
                           asp-route-serviceId="@s.Id">
                            Umów wizytę
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
