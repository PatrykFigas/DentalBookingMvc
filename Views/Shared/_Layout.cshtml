<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Klinika dentystyczna „Zdrowy uśmiech”</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DentalBookingMvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">

                <!-- LEWO: NAZWA -->
                <a class="navbar-brand d-flex align-items-center"
                   asp-controller="Home" asp-action="Index">
                    Klinika dentystyczna <strong>„Zdrowy uśmiech”</strong>
                </a>


                <!-- TOGGLER -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- ŚRODEK + PRAWO -->
                <div class="navbar-collapse collapse" id="mainNavbar">
                    <!-- WAŻNE: wrapper flex na całą szerokość -->
                    <div class="d-flex flex-column flex-sm-row align-items-sm-center w-100">

                        <!-- MENU: lewa/środek -->
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Services" asp-action="Index">Usługi</a>
                            </li>

                            @if (User.Identity?.IsAuthenticated == true && !User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Reservations" asp-action="My">Moje wizyty</a>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-bold"
                                       asp-area="Admin"
                                       asp-controller="Dashboard"
                                       asp-action="Index">
                                        Panel admina
                                    </a>
                                </li>
                            }
                        </ul>

                        <!-- PRAWO: login/wyloguj -->
                        <div class="ms-sm-auto mt-2 mt-sm-0">
                            <partial name="_LoginPartial" />
                        </div>

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container py-2">
            &copy; 2026 – Klinika dentystyczna „Zdrowy uśmiech”
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
