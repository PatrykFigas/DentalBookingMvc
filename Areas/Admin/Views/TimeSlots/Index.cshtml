@model List<DentalBookingMvc.Models.TimeSlot>

@{
    ViewData["Title"] = "Terminy - Admin";
}

<div class="page-header">
    <div>
        <h2 class="mb-1">Terminy</h2>
        <div class="page-subtitle">Dodawaj dostępne terminy i zarządzaj ich dostępnością.</div>
    </div>
    <div class="d-flex gap-2 flex-wrap">
        <a class="btn btn-outline-primary"
           asp-area="Admin"
           asp-controller="Dashboard"
           asp-action="Index">
            ← Panel admina
        </a>
        <a class="btn btn-primary" asp-action="Create">+ Dodaj termin</a>
    </div>
</div>

@if (TempData["Ok"] != null)
{
    <div class="alert alert-success">@TempData["Ok"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (!Model.Any())
{
    <div class="card section-card">
        <div class="card-body">
            <div class="text-muted">Brak terminów. Dodaj pierwszy termin.</div>
        </div>
    </div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Dentysta</th>
                <th>Start</th>
                <th>Czas</th>
                <th>Aktywny</th>
                <th>Zajęty</th>
                <th class="text-end">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Dentist?.FullName</td>
                    <td>@t.Start.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@t.DurationMinutes min</td>
                    <td>
                        @if (t.IsActive)
                        {
                            <span class="badge bg-success">TAK</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">NIE</span>
                        }
                    </td>
                    <td>
                        @if (t.IsBooked)
                        {
                            <span class="badge bg-danger">TAK</span>
                        }
                        else
                        {
                            <span class="badge bg-success">NIE</span>
                        }
                    </td>
                    <td class="text-end">
                        <form asp-action="Delete" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@t.Id" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Usunąć termin?')">
                                Usuń
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
