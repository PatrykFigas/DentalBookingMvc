@model DentalBookingMvc.Models.TimeSlot

@{
    ViewData["Title"] = "Dodaj termin";
    var dentists = ViewBag.Dentists as List<DentalBookingMvc.Models.Dentist>;
}

<div class="page-header">
    <div>
        <h2 class="mb-1">Dodaj termin</h2>
        <div class="page-subtitle">Utwórz nowy dostępny slot do rezerwacji.</div>
    </div>
    <a class="btn btn-outline-primary" asp-action="Index">← Lista terminów</a>
</div>

<div class="card section-card">
    <div class="card-body">
        <form method="post" class="mt-1">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Dentysta</label>
                    <select asp-for="DentistId" class="form-select" required>
                        <option value="">-- wybierz dentystę --</option>
                        @if (dentists != null)
                        {
                            foreach (var d in dentists)
                            {
                                <option value="@d.Id">@d.FullName</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="DentistId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Data i godzina</label>
                    <input asp-for="Start"
                           type="datetime-local"
                           class="form-control"
                           value="@(Model.Start == default ? "" : Model.Start.ToString("yyyy-MM-ddTHH:mm"))" />
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Czas trwania (min)</label>
                    <input asp-for="DurationMinutes" type="number" min="5" max="480" class="form-control" />
                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                    <div class="form-text">Typowo 30–60 minut.</div>
                </div>

                <div class="col-md-6 d-flex align-items-end">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label" asp-for="IsActive">Aktywny</label>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 flex-wrap mt-4">
                <button class="btn btn-primary" type="submit">Zapisz</button>
                <a class="btn btn-secondary" asp-action="Index">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
